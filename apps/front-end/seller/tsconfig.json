{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components": ["components"],
      "@partials": ["../../../packages/ui/components/partials"],
      "@blocks": ["../../../packages/ui/components/blocks"],
      "@libs": ["../../../packages/ui/libs"],
      "@const": ["../../../packages/ui/constants"],
      "@blocks/*": ["../../../packages/ui/components/blocks/*"],
      "@sections/*": ["../../../packages/ui/components/sections/*"],
      "@sections": ["../../../packages/ui/components/sections"]
    }
  }
}
