{
  "extends": "tsconfig/react-library.json",
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "types": [
      "jest"
    ],
    "module": "CommonJS",
    "target": "ES2017",
    "outDir": "dist/",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "strict": true
  }
}