{
  "extends": "tsconfig/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "outDir": "dist/",
    "sourceMap": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@generators": ["src/generators"]
    }
  }
}
