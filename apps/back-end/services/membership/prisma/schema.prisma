// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Membership {
  id                     String                   @id @default(auto()) @map("_id") @db.ObjectId
  name                   String
  commissionOn           CommissionOn
  recurring              Recurring
  priceId                String?
  turnover_rules         MembershipTurnoverRule[]
  includings             MembershipIncludeItem[]
  active                 Boolean                  @default(false)
  MemberShipSubscription MemberShipSubscription[]
}

model MembershipTurnoverRule {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  membershipId   String         @db.ObjectId
  membership     Membership     @relation(fields: [membershipId], references: [id])
  priceId        String?
  usage          Float
  commission     Float
  commissionType commissionType
}

model MemberShipSubscription {
  userId       String     @id @map("_id") @db.ObjectId
  membershipId String     @db.ObjectId
  membership   Membership @relation(fields: [membershipId], references: [id])

  startAt DateTime
  endAt   DateTime
}

enum Recurring {
  day
  month
  week
  year
}

type MembershipIncludeItem {
  title String
}

enum CommissionOn {
  external_click
  sale
  revenue
}

enum commissionType {
  fixed
  percentage
}

enum MembershipUnitType {
  vendor_site_click
}
