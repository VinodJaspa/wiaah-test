// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Membership {
  id                     String                   @id @default(auto()) @map("_id") @db.ObjectId
  name                   String
  commissionOn           CommissionOn
  recurring              membershipRecurring
  priceIds               String[]
  turnover_rules         MembershipTurnoverRule[]
  includings             MembershipIncludeItem[]
  active                 Boolean                  @default(false)
  sortOrder              Int
  MemberShipSubscription MemberShipSubscription[]
}

enum membershipRecurring {
  day
  month
  week
  year
}

model MembershipTurnoverRule {
  id             String                     @id @default(auto()) @map("_id") @db.ObjectId
  membershipId   String                     @db.ObjectId
  membership     Membership                 @relation(fields: [membershipId], references: [id])
  usage          Float?
  commission     Float
  commissionType commissionType
  type           MembershipTurnoverRuleType
}

enum MembershipTurnoverRuleType {
  usage
  flat
}

model MemberShipSubscription {
  userId       String     @id @map("_id") @db.ObjectId
  membershipId String     @db.ObjectId
  membership   Membership @relation(fields: [membershipId], references: [id])
  stripeSubId  String

  usage   Float                        @default(0)
  status  MembershipSubscriptionStatus @default(pending)
  startAt DateTime
  endAt   DateTime
}

enum MembershipSubscriptionStatus {
  pending
  active
  expired
}

enum Recurring {
  day
  month
  week
  year
}

type MembershipIncludeItem {
  title String
}

enum CommissionOn {
  external_click
  revenue
}

enum commissionType {
  fixed
  percentage
}

enum MembershipUnitType {
  vendor_site_click
}
