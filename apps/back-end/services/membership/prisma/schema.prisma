// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Membership {
  id String @id @db.ObjectId @default(auto()) @map("_id")
  name String 
  commissionOn CommissionOn
  recurring Recurring
  priceId String?
  turnover_rules MembershipTurnoverRule[]
  includings MembershipIncludeItem[]
  active Boolean @default(false)
}
model MembershipTurnoverRule {
  id String @id @default(auto()) @db.ObjectId @map("_id")
  membershipId String @db.ObjectId
  membership Membership @relation(fields: [membershipId],references: [id])
  priceId String?
  usage Float
  commission Float
  commissionType commissionType
}

enum Recurring {
  day
  month
  week
  year
}

type MembershipIncludeItem {
  title String
}

enum CommissionOn {
  external_click
  sale
  revenue
}
enum commissionType {
  fixed
  percentage
}
enum MembershipUnitType {
  vendor_site_click
}