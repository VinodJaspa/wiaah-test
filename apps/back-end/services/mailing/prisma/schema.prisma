generator client {
  provider = "prisma-client-js"
  output = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Newsletter {
  id String @id @db.ObjectId @default(auto()) @map("_id")
  ownerId String @db.ObjectId @unique
  emailSettings NewsLetterSettings 
}

type NewsLetterSettings {
  feedback Boolean @default(true)
  reminder Boolean @default(true)
  product Boolean @default(true)
  news Boolean @default(true)
}
