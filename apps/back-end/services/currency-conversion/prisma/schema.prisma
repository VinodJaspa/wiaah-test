generator client {
  provider = "prisma-client-js"
  output = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Currency {
  id String @id @default(auto()) @db.ObjectId @map("_id")
  name String 
  code String @unique
  exchangeRate Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum CurrencyName {
  US_doller
}

enum CurrencyCode {
  USD
  EUR
  CHF
  EGP
}