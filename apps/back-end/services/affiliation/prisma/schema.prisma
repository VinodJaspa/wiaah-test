// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Affiliation {
  id        String            @id @default(auto()) @map("_id") @db.ObjectId
  sellerId  String            @db.ObjectId
  itemId    String
  itemType  String
  commision Float
  status    AffiliationStatus @default(active)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  expireAt  DateTime
}

enum AffiliationStatus {
  active
  inActive
}

model AffiliationPurchase {
  id                    String                    @id @default(auto()) @map("_id") @db.ObjectId
  itemId                String                    @db.ObjectId
  itemType              String
  sellerId              String                    @db.ObjectId
  affiliatorId          String                    @db.ObjectId
  purchaserId           String                    @db.ObjectId
  affiliationId         String
  createdAt             DateTime                  @default(now())
  paidCommissionPercent Float
  paidCommissionAmount  Float
  status                AffiliationPurchaseStatus @default(pending)
}

enum AffiliationPurchaseStatus {
  pending
  paid
  canceled
}
