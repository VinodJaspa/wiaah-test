generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model VoucherCluster {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  ownerId      String    @unique @db.ObjectId
  vouchersList Voucher[]
}


model Voucher{
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  ownerId      String    @unique @db.ObjectId
  code     String
  status   VoucherStatus
  amount   Float
  // type     VoucherType
  currency String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cluster VoucherCluster @relation(fields: [ownerId],references: [ownerId])
}

enum VoucherType {
  percent
  cash
}

enum VoucherStatus {
  active
  inActive
}
