// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model WithdrawalRequest {
  id                 String           @id @default(auto()) @map("_id") @db.ObjectId
  userId             String
  amount             Float
  requestedAt        DateTime         @default(now())
  processedAt        DateTime
  financialAccountId String
  status             WithdrawalStatus @default(pending)
}

enum WithdrawalStatus {
  pending
  refused
  processed
}

model InvoiceRecord {
  id      String             @id @default(auto()) @map("_id") @db.ObjectId
  period  String
  type    InvoiceRecordTypes
  total   Float              @default(0)
  overdue Float              @default(0)
  paid    Float              @default(0)
  unPaid  Float              @default(0)
}

enum InvoiceRecordTypes {
  year
  month
  day
}

model Transaction {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt()
  status      TransactionStatus @default(pending)
  fromId      String            @db.ObjectId
  userId      String            @db.ObjectId
  paymentType String
  description String
  amount      Float
  currency    String
}

enum TransactionStatus {
  pending
  success
  failed
}

model BillingAddress {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  firstName  String
  lastName   String
  address    String
  address2   String?
  country    String
  city       String
  state      String?
  postalCode String
  phone      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Balance {
  id                       String   @id @default(auto()) @map("_id") @db.ObjectId
  ownerId                  String   @unique @db.ObjectId
  withdrawableBalance      Float    @default(0)
  pendingBalance           Float    @default(0)
  cashbackBalance          Float    @default(0)
  convertedCashbackBalance Float    @default(0)
  allTimeEarnings          Float    @default(0)
  balanceCurrency          String
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
}

model FinancialAccount {
  id             String               @id @default(auto()) @map("_id") @db.ObjectId
  ownerId        String               @db.ObjectId
  financialId    String
  type           FinancialAccountType
  card_exp_month String?
  card_exp_year  String?
  card_number    String?
  card_cvc       String?
  currency       String?
  bank_number    String?
  bank_country   String?
  label          String               @default("PaymentMethod")
}

enum FinancialAccountType {
  bank
  card
}
