generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Registeration {
  id                String             @id @default(auto()) @map("_id") @db.ObjectId
  verificationToken String             @unique
  accountInputData  AccountInputsData?
}

model AccountInputsData {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  registeration   Registeration @relation(fields: [registerationId], references: [id])
  registerationId String        @db.ObjectId @unique
  firstName       String
  lastName        String
  email           String        @unique
  password        String
}
