generator client {
  provider = "prisma-client-js"
  output = "./generated"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Registeration {
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  verificationToken String            @unique
  accountInputData  AccountInputsData
  email             String            @unique
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt()
}

type AccountInputsData {
  firstName String
  lastName  String
  password  String
}
