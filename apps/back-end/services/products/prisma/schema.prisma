// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "./generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id() @default(auto()) @map("_id") @db.ObjectId()
  title       String
  description String
  price       Int
  category    String
  colors      String[]
  sizes       String[]
  stock       Int
  rate        Int
  brand       String
  discount    Discount? 
  storeId     String
  cashback    CashBack?
  presentations ProductPresentation[]
}

type Discount {
  units Int
  amount Int
}
type CashBack {
  units Int
  amount Int
  type CashbackType
}

enum CashbackType {
  percent
  cash
}

type ProductPresentation {
  type PresentationType
  src String 
}

enum PresentationType {
  video
  image
}
