{
  "extends": "tsconfig/react-library.json",
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "types": [
      "jest"
    ],
    "lib": [
      "dom",
      "esnext"
    ],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "module": "CommonJS",
    "baseUrl": "."
  }
}