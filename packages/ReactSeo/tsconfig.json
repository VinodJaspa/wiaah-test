{
  "extends": "tsconfig/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "types": ["jest"],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "strict": false,
    "module": "CommonJS",
    "target": "ES5",
    "jsx": "react",
    "paths": {
      "@partials": ["../ui/components/partials"],
      "@blocks": ["../ui/components/blocks"],
      "@blocks/*": ["../ui/components/blocks/*"],
      "@sections/*": ["../ui/components/sections/*"],
      "@features/*": ["../ui/components/features/*"],
      "@sections": ["../ui/components/sections"],
      "@features": ["../ui/components/features"],
      "@libs": ["../ui/libs"],
      "@const": ["../ui/constants"],
      "@src/*": ["../ui/src/*"],
      "@UI": ["../ui"],
      "@UI/*": ["../ui/*"],
      "placeholder": ["../placeholder"]
    }
  }
}
