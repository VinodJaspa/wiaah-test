{
  "extends": "tsconfig/react-library.json",
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "types": [
      "jest"
    ],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@entity": [
        "entity"
      ],
      "@this": [
        "src"
      ]
    }
  }
}