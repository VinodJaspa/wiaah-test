{
  "extends": "tsconfig/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "types": ["jest"],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "rootDir": "./",
    "outDir": "./dist",
    "strict": false,
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@Dto": ["Dto"],
      "@Fetchers": ["fetchers"],
      "@Utils": ["src/utils"],
      "@types": ["src/types"],
      "@partials": ["../ui/components/partials"],
      "@blocks": ["../ui/components/blocks"],
      "@blocks/*": ["../ui/components/blocks/*"],
      "@sections/*": ["../ui/components/sections/*"],
      "@features/*": ["../ui/components/features/*"],
      "@sections": ["../ui/components/sections"],
      "@features": ["../ui/components/features"],
      "@libs": ["../ui/libs"],
      "@const": ["../ui/constants"],
      "@src/*": ["../ui/src/*"],
      "@UI": ["../ui"],
      "@UI/*": ["../ui/*"]
    }
  }
}
