{
  "extends": "tsconfig/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES5",
    "jsx": "react-jsx",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@partials": ["components/partials"],
      "@blocks": ["components/blocks"],
      "@libs": ["libs"],
      "@const": ["constants"]
    }
  }
}
