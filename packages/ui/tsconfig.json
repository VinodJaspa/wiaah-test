{
  "extends": "tsconfig/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES5",
    "jsx": "react-jsx",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@partials": ["components/partials"],
      "@blocks": ["components/blocks"],
      "@blocks/*": ["components/blocks/*"],
      "@sections/*": ["components/sections/*"],
      "@features/*": ["components/features/*"],
      "@sections": ["components/sections"],
      "@features": ["components/features"],
      "@libs": ["libs"],
      "@const": ["constants"],
      "@src/*": ["src/*"],
      "@UI": ["."],
      "@UI/*": ["./*"]
    }
  }
}
