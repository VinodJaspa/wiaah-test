{
  "extends": "tsconfig/react-library.json",
  "include": [".", "../../apps/front-end/seller/components/Order", "../../apps/front-end/seller/components/QRCodeVerification", "../../apps/front-end/seller/components/Reviews"],

  "exclude": [
    "dist",
    "build",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "strict": false,
    "baseUrl": ".",
    "types": ["jest"],
    "paths": {
      "@partials": ["./components/partials"],
      "@blocks": ["./components/blocks"],
      "@blocks/*": ["./components/blocks/*"],
      "@sections/*": ["./components/sections/*"],
      "@features/*": ["./components/features/*"],
      "@sections": ["./components/sections"],
      "@features": ["./components/features"],
      "@libs": ["./libs"],
      "@const": ["./constants"],
      "@src/*": ["./src/*"],
      "@UI": ["."],
      "@UI/*": ["./*"],
      "placeholder": ["../placeholder/*"],
      "utils": ["../utils"]
    }
  }
}
