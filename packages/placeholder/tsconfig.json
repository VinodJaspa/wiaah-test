{
  "extends": "tsconfig/react-library.json",
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "types": [
      "jest"
    ],
    "strict": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "target": "ES5",
    "paths": {
      "@this": [
        "src"
      ],
      "@partials": [
        "../ui/components/partials"
      ],
      "@blocks": [
        "../ui/components/blocks"
      ],
      "@blocks/*": [
        "../ui/components/blocks/*"
      ],
      "@sections/*": [
        "../ui/components/sections/*"
      ],
      "@features/*": [
        "../ui/components/features/*"
      ],
      "@sections": [
        "../ui/components/sections"
      ],
      "@features": [
        "../ui/components/features"
      ],
      "@libs": [
        "../ui/libs"
      ],
      "@const": [
        "../ui/constants"
      ],
      "@src/*": [
        "../ui/src/*"
      ],
      "@UI": [
        "../ui"
      ],
      "@UI/*": [
        "../ui/*"
      ]
    }
  }
}